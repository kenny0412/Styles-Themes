<resources>
    <!-- Base application theme. -->

    <style name="Theme.LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ligth_blue_500</item>
        <item name="colorPrimaryVariant">@color/ligth_blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ligth_blue_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="pageBackground">@style/pageBackground</item>
        <item name="textInputLayout">@style/text_input_layout_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ligth_blue_500</item>

        <item name="textSubheader">@style/text_subheader_light</item>
        <item name="cardLogin">@style/card_light</item>
        <item name="textLarge">@style/text_large_light</item>
        <item name="textRegular">@style/text_regular_light</item>
        <item name="spinnerItem">@style/spinner_item_light</item>
        <item name="theme_spinner">@style/theme_spinner_light</item>
        <item name="android:windowBackground">@color/gray_400</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/gray_400</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_700</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--        EditText background-->
        <item name="textInputLayout">@style/text_input_layout_dark</item>
        <!--        Text Colors-->
        <item name="textLarge">@style/text_large_dark</item>
        <item name="textRegular">@style/text_regular_dark</item>
        <item name="textSubheader">@style/text_subheader_dark</item>
        <item name="cardBackgroundColor">@color/black_200</item>
        <item name="cardLogin">@style/card_dark</item>
        <item name="spinnerItem">@style/spinner_item_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black_500</item>
        <item name="android:navigationBarColor">@color/black_500</item>
    </style>

</resources>