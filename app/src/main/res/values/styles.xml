<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    LIGHT MODE-->
    <style name="text_subheader_light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#000</item>
    </style>

    <style name="text_large_light">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/space_16dp</item>
    </style>

    <style name="text_regular_light">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="spinner_item_light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@color/ligth_blue_500</item>
    </style>

    <style name="theme_spinner_light">
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="card_light">
        <item name="cardCornerRadius">@dimen/radius_12dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="white_input_text">
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="horizontal_line_light">
        <item name="android:background">#00000000</item>
    </style>

    <style name="pageBackground">
        <item name="background">@color/gray_400</item>
    </style>

    <style name="text_input_layout_light">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_500</item>
    </style>

    <!--     DARK MODE -->
    <style name="text_subheader_dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/white</item>
    </style>

    <style name="text_large_dark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/space_16dp</item>
    </style>

    <style name="text_regular_dark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="spinner_item_dark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@color/yellow_500</item>
    </style>

    <style name="theme_spinner_dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_dark">
        <item name="cardCornerRadius">@dimen/radius_12dp</item>
        <item name="cardBackgroundColor">@color/black_200</item>
    </style>

    <style name="text_input_layout_dark">
        <item name="boxBackgroundColor">@color/black_200</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>